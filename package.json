{
    "name": "@bool-ts/cli",
    "module": "./src/index.ts",
    "type": "module",
    "version": "1.0.0",
    "description": "CLI for Bool framework",
    "license": "MIT",
    "author": "Tran Duc Tam (Neo)",
    "scripts": {
